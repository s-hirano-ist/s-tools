{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  timezone: 'Asia/Tokyo',
  baseBranches: [
    'main',
  ],
  extends: [
    'config:recommended',
    'config:best-practices',
    ':semanticCommitTypeAll(chore)',
  ],
  reviewers: [
    's-hirano-ist',
  ],
  enabledManagers: [
    'github-actions',
    'docker-compose',
    'dockerfile',
  ],
  dependencyDashboard: true,
  schedule: [
    'before 11am on monday',
  ],
  labels: [
    'dependencies',
  ],
  rangeStrategy: 'bump',
  lockFileMaintenance: {
    enabled: true,
  },
  vulnerabilityAlerts: {
    labels: [
      'security',
    ],
  },
    packageRules: [
    {
      "matchManagers": [
        "github-actions",
      ],
      "groupName": "GitHub Actions Updates",
      "groupSlug": "github-actions-updates"
    }
  ],
}
